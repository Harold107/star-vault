<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.galacticore.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <!-- Action to navigate to RegistrationFragment -->
        <action
                android:id="@+id/action_loginFragment_to_registrationFragment"
                app:destination="@id/registrationFragment" />

        <!-- Action to navigate to HomeFragment -->
        <action
                android:id="@+id/action_loginFragment_to_homeFragment"
                app:destination="@id/homeFragment" />
    </fragment>

    <fragment
            android:id="@+id/registrationFragment"
            android:name="com.example.galacticore.RegistrationFragment"
            android:label="fragment_registration"
            tools:layout="@layout/fragment_registration" />

    <fragment android:id="@+id/homeFragment" android:name="com.example.galacticore.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_addTransactionFragment"
                app:destination="@id/addTransactionFragment"/>
    </fragment>

    <fragment android:id="@+id/addTransactionFragment" android:name="com.example.galacticore.AddTransactionFragment"
              android:label="fragment_add_transaction" tools:layout="@layout/fragment_add_transaction">
        <action android:id="@+id/action_addTransactionFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>

</navigation>