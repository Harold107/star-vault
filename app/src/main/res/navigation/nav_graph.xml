<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/FirstFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.example.galacticore.FirstFragment"
            android:label="First Fragment"
            tools:layout="@layout/fragment_first">
        <action
                android:id="@+id/action_FirstFragment_to_addTransactionFragment"
                app:destination="@id/addTransactionFragment" />
    </fragment>

    <fragment
            android:id="@+id/addTransactionFragment"
            android:name="com.example.galacticore.AddTransactionFragment"
            android:label="Add Transaction"
            tools:layout="@layout/fragment_add_transaction">
        <action
                android:id="@+id/action_addTransactionFragment_to_FirstFragment"
                app:destination="@id/FirstFragment" />
    </fragment>

</navigation>