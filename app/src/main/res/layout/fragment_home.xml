    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/rocket_fly_icon"
                android:layout_width="42dp"
                android:layout_height="100dp" android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp" android:rotation="90"/>

        <!--main backdrop -->
        <ImageView
                android:src="@drawable/moon_icon"
                android:layout_width="174dp"
                android:layout_height="215dp" android:id="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="540dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="304dp"/>
        <androidx.cardview.widget.CardView
                android:layout_width="412dp"
                android:layout_height="575dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:cardBackgroundColor="#e3e3e3"
                android:id="@+id/cardView_mainBackdrop"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="156dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="592dp"
                    android:id="@+id/constraintLayout">

                <TextView
                        android:text="@string/current_goal"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="$100,000"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView_goalNumber"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goal"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp" app:layout_constraintEnd_toEndOf="parent"/>

                <!--monthly info backdrop-->
                <androidx.cardview.widget.CardView
                        android:layout_width="376dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="20dp"
                        android:id="@+id/cardView_mothlyInfoBackdrop"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goalNumber"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"
