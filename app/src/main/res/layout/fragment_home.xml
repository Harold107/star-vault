<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/home_background"
             tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star1_home"
                android:alpha="0.7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginStart="212dp" android:rotation="-21"/>

        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star2_home"
                android:alpha="0.7"
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="88dp"
                android:layout_marginStart="8dp" android:rotation="-17"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star3_home"
                android:alpha="0.7"
                android:layout_width="13dp"
                android:layout_height="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="536dp"
                android:layout_marginStart="376dp" android:rotation="15"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star4_home"
                android:alpha="0.7"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="92dp"
                android:layout_marginStart="244dp" android:rotation="26"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star5_home"
                android:alpha="0.3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="48dp" android:rotation="17"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star6_home"
                android:alpha="0.7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="88dp"
                android:layout_marginStart="92dp"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star7_home"
                android:alpha="0.7"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="-9dp"
                android:layout_marginStart="108dp" android:rotation="26"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star8_home"
                android:alpha="0.7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="416dp"
                android:layout_marginStart="376dp" android:rotation="17"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star9_home"
                android:alpha="0.7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="216dp"
                android:layout_marginStart="356dp" android:rotation="17"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star10_home"
                android:alpha="0.2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="252dp"
                android:layout_marginStart="16dp" android:rotation="57"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star11_home"
                android:alpha="0.6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="484dp"
                android:layout_marginStart="336dp" android:rotation="87"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star12_home"
                android:alpha="0.2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="452dp"
                android:layout_marginStart="16dp" android:rotation="57"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star13_home"
                android:alpha="0.4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="332dp"
                android:layout_marginStart="392dp" android:rotation="7"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star14_home"
                android:alpha="0.6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="532dp"
                android:layout_marginStart="20dp" android:rotation="37"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star15_home"
                android:alpha="0.1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="608dp"
                android:layout_marginStart="372dp" android:rotation="47"/>
        <ImageView
                android:src="@drawable/star"
                android:id="@+id/star16_home"
                android:alpha="0.4"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="664dp"
                android:layout_marginStart="16dp" android:rotation="97"/>
        <ImageView
                android:src="@drawable/moon_icon"
                android:layout_width="174dp"
                android:layout_height="215dp"
                android:id="@+id/moon_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="-15dp"
                android:layout_marginTop="-20dp"/>

        <!-- Goal Progress Bar -->
        <TextView
                android:text="Congratulations\nYou've reached the moon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:alpha="0"
                android:textSize="34sp"
                android:id="@+id/congrats_text"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:src="@drawable/rocket_fly_icon"
                android:layout_width="42dp"
                android:layout_height="100dp"
                android:id="@+id/rocket_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="84dp"
                android:layout_marginTop="20dp"
                android:rotation="90"/>
        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="350dp"
                android:layout_height="15dp"
                android:id="@+id/current_goal_bar"
                android:progress="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="120dp"
                android:progressTint="#06E3FF"
                android:progressBackgroundTint="#B100A7"/>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
                android:layout_width="334dp"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                android:alpha="1"
                app:cardBackgroundColor="@color/backDropMain_darkGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="83dp"
                android:id="@+id/warning_dialog"
                app:layout_constraintHorizontal_bias="0.5">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Reset your current goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reset_goal"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="Confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:id="@+id/reset_confirm"
                        android:backgroundTint="@color/pink"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="120dp"
                        android:layout_marginEnd="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="2dp" app:layout_constraintTop_toBottomOf="@+id/reset_number"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:inputType="number"
                        android:ems="10"
                        android:textAlignment="center"
                        android:hint="New Goal"
                        android:id="@+id/reset_number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/reset_goal"
                        android:layout_marginTop="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="680dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/backDropMain_darkGrey"
                android:id="@+id/cardView_mainBackdrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <!-- Current Goal Section -->
                <TextView
                        android:text="@string/current_goal"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:text="$100,000"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goalNumber"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goal"
                        android:layout_marginTop="8dp"
                        android:textSize="38sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Monthly Info Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:id="@+id/cardView_monthlyInfoBackdrop"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goalNumber"
                        android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                        <TextView
                                android:text="Monthly Balance"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalance"
                                android:textSize="20sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalanceNumber"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyBalance"/>

                        <TextView
                                android:text="Income"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyIncome"
                                app:layout_constraintStart_toStartOf="@+id/textView_monthlyBalance"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyBalance"
                                android:layout_marginTop="16dp"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyIncomeNumber"
                                app:layout_constraintEnd_toEndOf="@+id/textView_monthlyBalanceNumber"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyIncome"/>

                        <TextView
                                android:text="Expenses"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_Expenses"
                                app:layout_constraintStart_toStartOf="@+id/textView_monthlyIncome"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyIncome"
                                android:layout_marginTop="8dp"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyExpensesNumber"
                                app:layout_constraintEnd_toEndOf="@+id/textView_monthlyIncomeNumber"
                                app:layout_constraintTop_toTopOf="@+id/textView_Expenses"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Daily Info and Transactions List -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView_monthlyInfoBackdrop"
                        android:layout_marginTop="16dp"
                        android:id="@+id/cardView_dailyInfoBackdrop" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                        <TextView
                                android:text="Today's Date"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_viewDate"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_viewDate"/>

                        <ListView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/listView_transaction"
                                app:layout_constraintTop_toBottomOf="@+id/textView_viewDate"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintStart_toStartOf="@+id/textView_viewDate"
                                app:layout_constraintEnd_toEndOf="@+id/textView3"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
                android:src="@drawable/rocket_rest"
                android:layout_width="42dp"
                android:layout_height="100dp"
                android:alpha="1"
                android:id="@+id/rocket_rest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="188dp"
                android:layout_marginStart="80dp"
                android:rotation="-30"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>