<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/home_background"
             tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp" android:id="@+id/star1_home"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" android:layout_marginStart="228dp"/>
        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp" android:id="@+id/star2_home"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="52dp" android:layout_marginStart="24dp"/>
        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp" android:id="@+id/star3_home"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="116dp" android:layout_marginStart="56dp"/>
        <ImageView
                android:src="@drawable/moon_icon"
                android:layout_width="174dp"
                android:layout_height="215dp"
                android:id="@+id/moon_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="-15dp"
                android:layout_marginTop="-20dp"/>
        <ImageView
                android:src="@drawable/rocket_fly_icon"
                android:layout_width="42dp"
                android:layout_height="100dp"
                android:id="@+id/rocket_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="104dp"
                android:layout_marginTop="36dp"
                android:rotation="90"/>

        <!--main backdrop -->
        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/current_goal_bar"
                android:alpha="1"
                android:progress="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="120dp" android:maxWidth="46dip"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.504"/>
        <androidx.cardview.widget.CardView
                android:layout_width="412dp"
                android:layout_height="900dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/backDropMain_darkGrey"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/cardView_mainBackdrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/constraintLayout">

                <ImageView
                        android:src="@drawable/baseline_calendar_month_24"
                        android:layout_width="40dp"
                        android:layout_height="39dp" android:id="@+id/calendar_home"
                        app:layout_constraintEnd_toEndOf="@+id/cardView_mothlyInfoBackdrop"
                        app:layout_constraintTop_toBottomOf="@+id/cardView_mothlyInfoBackdrop"
                        android:layout_marginTop="2dp"/>
                <TextView
                        android:text="@string/current_goal"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <!--monthly info backdrop-->
                <TextView
                        android:text="$100,000"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView_goalNumber"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goal"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp" app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.cardview.widget.CardView
                        android:layout_width="376dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="5dp"
                        android:id="@+id/cardView_mothlyInfoBackdrop"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goalNumber"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="500"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content" android:id="@+id/textView2"
                                app:layout_constraintEnd_toEndOf="@+id/textView_monthlyIncomeNumber"
                                app:layout_constraintTop_toTopOf="@+id/textView_Expenses"/>
                        <TextView
                                android:text="Expenses"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content" android:id="@+id/textView_Expenses"
                                app:layout_constraintStart_toStartOf="@+id/textView_monthlyIncome"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyIncome"
                                android:layout_marginTop="20dp"/>
                        <TextView
                                android:text="$700"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalanceNumber"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyBalance"/>
                        <TextView
                                android:text="Monthly Balance"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalance"
                                android:textSize="20sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginTop="32dp"
                                android:layout_marginStart="24dp"/>
                        <TextView
                                android:text="Income"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content" android:id="@+id/textView_monthlyIncome"
                                app:layout_constraintStart_toStartOf="@+id/textView_monthlyBalance"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyBalance"
                                android:layout_marginTop="28dp"/>
                        <TextView
                                android:text="1,200"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content" android:id="@+id/textView_monthlyIncomeNumber"
                                app:layout_constraintEnd_toEndOf="@+id/textView_monthlyBalanceNumber"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyIncome"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!--daily info backdrop-->
                <androidx.cardview.widget.CardView
                        android:layout_width="376dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView_mothlyInfoBackdrop"
                        android:layout_marginTop="44dp"
                        app:layout_constraintStart_toStartOf="@+id/cardView_mothlyInfoBackdrop"
                        android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/cardView_dailyInfoBackdrop">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ListView
                                android:layout_width="367dp"
                                android:layout_height="130dp"
                                android:id="@+id/listView_transaction"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.903"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                                android:text="$-500"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView3"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="40dp" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintStart_toEndOf="@+id/textView_viewDate"
                                app:layout_constraintHorizontal_bias="1.0"/>
                        <TextView
                                android:text="9/7/2024"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView_viewDate"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                                android:layout_marginStart="24dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>