<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/home_background"
             tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:id="@+id/star1_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="228dp"/>

        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:id="@+id/star2_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginStart="24dp"/>

        <ImageView
                android:src="@drawable/star"
                android:alpha="0.7"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:id="@+id/star3_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="116dp"
                android:layout_marginStart="56dp"/>

        <ImageView
                android:src="@drawable/moon_icon"
                android:layout_width="174dp"
                android:layout_height="215dp"
                android:id="@+id/moon_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="-15dp"
                android:layout_marginTop="-20dp"/>

        <ImageView
                android:src="@drawable/rocket_fly_icon"
                android:layout_width="42dp"
                android:layout_height="100dp"
                android:id="@+id/rocket_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="104dp"
                android:layout_marginTop="36dp"
                android:rotation="90"/>

        <!-- Goal Progress Bar -->
        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/current_goal_bar"
                android:progress="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="120dp"/>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/backDropMain_darkGrey"
                android:id="@+id/cardView_mainBackdrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="150dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <!-- Current Goal Section -->
                <TextView
                        android:text="@string/current_goal"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:text="$100,000"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_goalNumber"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goal"
                        android:layout_marginTop="8dp"
                        android:textSize="32sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Monthly Info Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:id="@+id/cardView_monthlyInfoBackdrop"
                        app:layout_constraintTop_toBottomOf="@+id/textView_goalNumber"
                        android:layout_marginTop="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                        <TextView
                                android:text="Monthly Balance"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalance"
                                android:textSize="20sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyBalanceNumber"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyBalance"/>

                        <TextView
                                android:text="Income"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyIncome"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyBalance"
                                android:layout_marginTop="16dp"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyIncomeNumber"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_monthlyIncome"/>

                        <TextView
                                android:text="Expenses"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_Expenses"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView_monthlyIncome"
                                android:layout_marginTop="8dp"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_monthlyExpensesNumber"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_Expenses"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Daily Info and Transactions List -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView_monthlyInfoBackdrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/cardView_dailyInfoBackdrop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                        <TextView
                                android:text="Today's Date"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_viewDate"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_viewDate"/>

                        <ListView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/listView_transaction"
                                app:layout_constraintTop_toBottomOf="@+id/textView_viewDate"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="16dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>