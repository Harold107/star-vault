<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings_Page" android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="665dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp">

        <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:id="@+id/cardView" app:cardElevation="5dp"
                android:elevation="5dp" app:cardMaxElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" android:layout_marginBottom="31dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView2" android:layout_marginEnd="29dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="31dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Notification"
                        android:layout_width="304dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        android:textSize="45sp" android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="22dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp" android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/switch1" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
                <Switch
                        android:text="Switch"
                        android:layout_width="309dp"
                        android:layout_height="42dp" android:id="@+id/switch1"
                        android:textSize="25sp"
                        android:layout_marginEnd="204dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                        android:layout_marginBottom="29dp" app:layout_constraintBottom_toTopOf="@+id/textView5"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textClock2"
                        android:textSize="20sp"
                        android:layout_marginStart="164dp"
                        app:layout_constraintStart_toEndOf="@+id/textView5"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/switch1"
                        android:layout_marginEnd="180dp"/>
                <TextView
                        android:text="Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textSize="23sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="23dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="180dp" app:layout_constraintEnd_toStartOf="@+id/textClock2"
                        android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="147dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:cardElevation="5dp" app:cardMaxElevation="10dp"
                android:elevation="5dp" android:id="@+id/cardView2" android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toTopOf="@+id/button3" android:layout_marginTop="31dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView6"
                        android:textSize="40sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="101dp" android:layout_marginEnd="101dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="67dp"
                        app:layout_constraintBottom_toTopOf="@+id/button2"/>
                <TextView
                        android:text="Currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="21dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="87dp" app:layout_constraintEnd_toStartOf="@+id/textView10"
                        android:layout_marginEnd="10dp" android:layout_marginBottom="22dp"
                        app:layout_constraintBottom_toTopOf="@+id/button2"/>
                <TextView
                        android:text="USD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="87dp" android:layout_marginBottom="22dp"
                        app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginStart="176dp"
                        app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginEnd="7dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="Delete Account"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" android:id="@+id/button2"
                        android:textSize="20sp"
                        android:backgroundTint="@color/red"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" android:layout_marginTop="22dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView7"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <Button
                android:text="Log out"
                android:layout_width="300dp"
                android:textSize="25sp"
                android:backgroundTint="@color/red"
                android:layout_height="wrap_content" android:id="@+id/button3"
                android:layout_marginEnd="55dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
                android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                android:layout_marginTop="13dp" app:layout_constraintTop_toBottomOf="@+id/cardView2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="92dp"
                android:background="#DEDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/constraintLayout2">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                    android:id="@+id/imageButton3"
                    android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/imageButton4"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/textView13"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
                    android:id="@+id/imageButton4"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="6dp" app:layout_constraintBottom_toTopOf="@+id/textView12"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton3" android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/imageButton5"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
                    android:id="@+id/imageButton5"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView11"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton4" android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"/>
            <TextView
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="9dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="47dp" app:layout_constraintTop_toBottomOf="@+id/imageButton5"
                    app:layout_constraintEnd_toStartOf="@+id/textView12" android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="Accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12"
                    android:textSize="19sp"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton4"
                    app:layout_constraintEnd_toStartOf="@+id/textView13" android:layout_marginEnd="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="9dp"/>
            <TextView
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp" android:id="@+id/textView13"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toEndOf="@+id/textView12" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="9dp" android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="Settings"
            android:layout_width="412dp"
            android:layout_height="64dp" android:id="@+id/textView"
            android:textAlignment="center" android:textSize="45dp"
            android:textColor="#F6F3F3" android:textColorLink="#7440CE" android:background="#713FC7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>