    <!-- Dimensions -->
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="game_icon_size">32dp</dimen>
    <dimen name="game_text_size">18sp</dimen>
    <dimen name="card_corner_radius">16dp</dimen>
