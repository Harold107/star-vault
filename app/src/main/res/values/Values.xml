    <!-- Navigation IDs -->
    <item name="nav_home" type="id"/>
    <item name="nav_game" type="id"/>
    <item name="nav_settings" type="id"/>
    <item name="homeFragment" type="id"/>
    <item name="gameFragment" type="id"/>
